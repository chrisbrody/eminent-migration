{
  "format": "page",
  "id": "blog_detail_page",
  "label": "Blog Detail Page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "tagline": {
        "type": "Select",
        "config": {
          "label": "Tagline",
          "placeholder": "",
          "options": [
            "Bathroom Tips",
            "Kitchen Tips",
            "Interior Tips",
            "Living Tips",
            "Modern Tips",
            "Tips"
          ],
          "default_value": "Bathroom Tips"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "headline": {
        "type": "Text",
        "config": {
          "label": "Headline",
          "placeholder": ""
        }
      },
      "short_description": {
        "type": "StructuredText",
        "config": {
          "label": "Short Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Date",
          "placeholder": ""
        }
      },
      "time_to_read": {
        "type": "Number",
        "config": {
          "label": "Time to Read (minutes)",
          "placeholder": ""
        }
      },
      "owner": {
        "type": "Link",
        "config": {
          "label": "Owner",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "owner",
              "fields": ["owner_image", "owner_name", "owner_title"]
            }
          ]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "hero": {
              "type": "SharedSlice"
            },
            "image_gallery": {
              "type": "SharedSlice"
            },
            "rich_text_content": {
              "type": "SharedSlice"
            },
            "faq": {
              "type": "SharedSlice"
            },
            "call_to_action": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
